#include <bits/stdc++.h>
using namespace std;

void FastIO(){ios_base::sync_with_stdio(false);cin.tie(nullptr);}

void solve() {
    int n; cin>>n;
    double x1=0,y1=0;
    while (n--){
        double a,b;cin>>a>>b;
        double rad=a*(PI/180.0);
        x1=x1+(b*cos(rad));
        y1=y1+(b*sin(rad));
    }
    double d=(x1*x1)+(y1*y1);
    double dis=sqrt(d);
    cout << fixed << setprecision(6) << dis << endl;  
}

int32_t main()
{
    FastIO();
    solve();
    return 0;
}
